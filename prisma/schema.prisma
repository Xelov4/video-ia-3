enum PostStatus {
  DRAFT
  PENDING_REVIEW
  PUBLISHED
  TRASHED
}

enum PostType {
  ARTICLE
  NEWS
  PAGE
}

enum CommentStatus {
  PENDING
  APPROVED
  SPAM
}

enum UserRole {
  ADMIN
  EDITOR
  AUTHOR
}

enum PricingModel {
  FREE
  FREEMIUM
  SUBSCRIPTION
  ONE_TIME_PAYMENT
  USAGE_BASED
  CONTACT_FOR_PRICING
}